{
  "version": "2.0.0",
  "tasks": [{
    "label": "build (Debug)",
    "group": { "kind": "build", "isDefault": true },
    
    "command": "nimble",
    "args": [
      "build",
      "--lineDir:on",
      "--debugger:native",
    ]
  },{
    "label": "build (Release)",
    "group": { "kind": "build", "isDefault": true },
    
    "command": "nimble",
    "args": [
      "build",
      "-d:release",
    ]
  }]
}
